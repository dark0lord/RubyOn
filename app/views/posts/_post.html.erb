<article>
	<section>
		<h2> <%= link_to post.title, post_path(post) %></h2>
	<small>
		<time><%= post.created_at.to_date.strftime("%d %B, %Y") %></time>

		<% if user_signed_in? %>
		<%= link_to 'Change', edit_post_path(post) %>

		<%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are u sure?'} %>
		<% end %>
	</small>
	</section>

	<section>
		<%= image_tag post.image.url(:thumb), class: 'img-thumbnail' if post.image? %>
		<%= post.summary %>
	</section>

	<section>
		<%= raw post.tags.map(&:name).map{ |t| link_to t, tag_path(t)}.join(' ') %>
	</section>
</article>
